extends /elements/layout-index

block data
  -
    title = "Rx2Go Admin: Call Center"

    let pagesDashboard = [
      { name: "Queue Dashboard", url: "dashboard-queue" },
      { name: "Rejected Dashboard", url: "dashboard-rejected" },
    ]
    let pagesQueue = [
      { name: "Queue Building", url: "queue-building" },
      { name: "Queue Apartment", url: "queue-apartment" },
      { name: "Queue Recipient Name", url: "queue-recipient-name" },
      { name: "Queue Signature", url: "queue-signature" },
      { name: "Queue Delivery Method", url: "queue-delivery-method" },
      { name: "Queue Special Instruction", url: "queue-special-instruction" },
      { name: "Queue Copay", url: "queue-copay" },
      { name: "Queue Photo ID", url: "queue-photo-id" },
      { name: "Queue Confimation Required", url: "queue-confimation-required" },
    ]
    let pagesReject = [
      { name: "Reject", url: "reject" },
      { name: "UI", url: "ui" },
    ]


block content
  mixin page-list({ list })
    ul
      each it in list
        li
          a(href=it.url) #{it.url} ---- #{it.name}
  style.
    body {
      --color-main: #4682b4;
      --color-bg: #ffffff;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      color: var(--color-main);
    }
    ul,
    ol {
      margin-top: 0;
      margin-bottom: 20px;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }

  h1= title

  h2 Pages
  +page-list({list: pagesDashboard})
  +page-list({list: pagesQueue})
  +page-list({list: pagesReject})
