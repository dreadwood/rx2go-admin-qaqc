include /components/form/f-checkbox-table

mixin qq-table-dashboard-queue({})
  .qq-table-dashboard
      table.qq-table-dashboard__table
        thead
          tr
            th.qq-table-dashboard__d-check #[+f-checkbox-table({})]
            th.qq-table-dashboard__d-num #
            th.qq-table-dashboard__d-qaqc QAQC
            th Order #
            th Status
            th Driver
            th Dispatcher
            th Client
        tbody
          each _, i in (new Array(15)).fill('')
            tr
              td.qq-table-dashboard__d-check #[+f-checkbox-table({})]
              td.qq-table-dashboard__d-num=(i + 1)
              td.qq-table-dashboard__d-qaqc(style="width: 130px")
                span.red PTI DD
                span.green GFV Ph.Dl Ph.Ap DM SS AT.DN AT.CP AT.CR
              td #[b #12345678]
              td Delivered
              td Paul Thompson
              td Meylisgeldi Tachmammedov
              td Modern Remedies Pharmacy - Modern Remedies Pharmacy
          tr
            td.qq-table-dashboard__d-full(colspan="8")
              .qq-table-dashboard__controls
                button.qq-btn-table Approve
                button.qq-btn-table(disabled) Remoderate
